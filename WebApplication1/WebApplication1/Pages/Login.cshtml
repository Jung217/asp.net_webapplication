@page
@model WebApplication1.Pages.LoginModel
@{
}

<style>
    span {
        display: inline-block;
        width: 70px;
    }
    button {
        width: 80px;
    }
</style>
<script>
    function checkInput() {
        var user_id = document.getElementById("user_id").value;
        var user_password = document.getElementById("user_password").value;
        if (user_id == "" || user_password == "") {
            alert("id or password could not be empty");
            return false;
        }
        else return true;
    }
</script>

<form method="post">
    <div>
        <span>User ID:</span>
        <input asp-for="user_id" type="text" />
    </div>
    <div style="padding-top:10px;">
        <span>Password:</span>
        <input asp-for="user_password" type="password" />
    </div>
    <div style="padding-top:10px;">
        <button asp-page-handler="Login" onclick="if (!checkInput()) return false;">Login</button>
    </div>
</form>
<div>@Model.message</div>
